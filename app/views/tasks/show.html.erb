<h2><%= @task.title %></h2>
<p><%= @task.details %></p>
<p><%= @task.completed %></p>


<button class="btn btn-primary"> <%= link_to "Edit this task", edit_path(@task) %>
<br>
<button class="btn btn-primary"> <%= link_to "Delete",
  task_path(@task),
  data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
%> </button>
<br>
<p><%= link_to "Back to Index", tasks_path %></p>
